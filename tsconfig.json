{
  "compilerOptions": {
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "noImplicitAny": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customMatcher": "\\.css$",
          "namedExports": false,
          "goToDefinition": true,
          "classnameTransform": "asIs"
        }
      }
    ],
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"],
      "~assets/*": ["./assets/*"]
    }
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
