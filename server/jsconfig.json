{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~src/*": ["./src/*"],
      "~assets/*": ["./assets/*"]
    }
  }
}
